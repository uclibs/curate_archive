<div class="row with-headroom">
  <div class="span12">
    <fieldset id="content-editor">
      <legend>
        <%=t('sufia.work.editor.legend') %>
        <small><%=t('sufia.work.editor.caption') %></small>
      </legend>

      <div class="row">
        <div class="span6" id="required-information">
          <%= render "linked_editors", curation_concern: curation_concern, f: f %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.editor.individual.help')  %>
      </div>

      <div class="row">
        <div class="span6" id="additional-information">
                <%= render "linked_groups", curation_concern: curation_concern, f: f %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.editor.group.help')  %>
      </div>
    </fieldset>
  </div>
</div>
