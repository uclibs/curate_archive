<div class="row"> <div class="span12">
    <a href="#" class="div-show">Show Additional Description</a>
    <fieldset class="hidden hidden-form-element" class="optional prompt">
      <legend>
        Additional Description
        <small>Optional information</small>
      </legend>

      <div class="row">
        <div class="span6">
          <%= f.input :date_created,
            label: "Date Created",
            placeholder: "YYYY-MM-DD"
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.date_created.help', work_type: curation_concern.human_readable_type) %>
      </div>
      
      <div class="row">
        <div class="span6">
          <%= f.input :alternate_title,
            as: :multi_value,
            input_html: { class: 'input-xlarge' }
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.alternate_title.help', work_type: curation_concern.human_readable_type) %>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.input :genre, 
            collection: Document.valid_types, 
            input_html: { class: 'input-xlarge' } 
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.genre.help', work_type: curation_concern.human_readable_type) %>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.input :subject,                
            as: :multi_value, 
            input_html: { class: 'input-xlarge' }
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.subject.help', work_type: curation_concern.human_readable_type) %>
      </div>
      <div class="row">
        <div class="span6">
          <%= f.input :coverage_spatial,
            as: :multi_value,
            input_html: { class: 'input-xlarge' },
            label: "Geographic Subject"
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.coverage_spatial.help', work_type: curation_concern.human_readable_type) %>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.input :coverage_temporal,
            as: :multi_value, 
            input_html: { class: 'input-xlarge' },
            label: "Time period"
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.coverage_temporal.help', work_type: curation_concern.human_readable_type) %>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.input :language,
            as: :multi_value,
            input_html: { class: 'input-xlarge' }
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.language.help', work_type: curation_concern.human_readable_type) %>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.input :bibliographic_citation,
            label: "Citation",
            as: :text,
            input_html: { class: 'input-xxxlarge' }
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.bibliographic_citation.help', work_type: curation_concern.human_readable_type) %>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.input :requires,
            input_html: { class: 'input-xlarge' },
            label: "Required software"
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.requires.help', work_type: curation_concern.human_readable_type) %>
      </div>

      <div class="row">
        <div class="span6">
          <%= f.input :note,
            as: :text,
            input_html: { class: 'input-xxxlarge' }
          %>
        </div>
        <%= render 'form_input_help_block', help_text: I18n.t('sufia.work.input_field.note.help', work_type: curation_concern.human_readable_type) %>
      </div>
    </fieldset>
  </div>
</div>
